<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFavorite"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_samar">

            <TextView
                android:id="@+id/hotNewsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/glacial_reguler"
                android:text="Hot News"
                android:textColor="#ED5A5A"
                app:layout_constraintStart_toEndOf="@+id/cardViewImgFav"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/judulTitleFav"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/glacial_reguler"
                android:text="Bantahan Jokowi Soal Tudingan Intervensi Kasus e-Ktp Setya Novanto "
                android:textColor="#040404"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/hotNewsTxt"
                app:layout_constraintTop_toBottomOf="@+id/hotNewsTxt" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImgFav"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/posterImgFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/politics1" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>