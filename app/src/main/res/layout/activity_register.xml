<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newsimage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:background="#00000000"
        android:fontFamily="@font/glacial_blod"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/glacial_blod"
        android:textColor="#8E8E8D"
        android:text="Create an  account. Itâ€™s free"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/userInputTxt"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="#999999"
        android:fontFamily="@font/glacial_reguler"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/emailRegisterInputText"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/glacial_reguler"
        android:textColorHint="#999999"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/userInputTxt"
        app:layout_constraintStart_toStartOf="@+id/userInputTxt"
        app:layout_constraintTop_toBottomOf="@+id/userInputTxt" />

    <EditText
        android:id="@+id/passRegisterInputText"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/glacial_reguler"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#999999"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/emailRegisterInputText"
        app:layout_constraintStart_toStartOf="@+id/emailRegisterInputText"
        app:layout_constraintTop_toBottomOf="@+id/emailRegisterInputText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRegisterSubmit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn1"
        android:fontFamily="@font/glacial_reguler"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passRegisterInputText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonRegisterSubmit"
        app:layout_constraintStart_toStartOf="@+id/buttonRegisterSubmit"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegisterSubmit">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_reguler"
            android:text="Already have an account? "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_blod"
            android:text="Login"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>